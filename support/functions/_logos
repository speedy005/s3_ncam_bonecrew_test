};
bye(){
	clear;
	s3logo;
	exit;
};
s3logo(){
echo -e $C"
   ███████╗██████╗ 
   ██╔════╝╚════██╗    =================================
   ███████╗ █████╔╝    $(printf '%-6s %29s' "$w_l"'Version' "$g_l$(version | head -n1 | awk '{print $1}')")$C
   ╚════██║ ╚═══██╗    =================================
   ███████║██████╔    $p_l by$y_l Gorgone$p_l 2021$C,$y_l Bonecrew$p_l 2025$C
   ╚══════╝╚═════╗     =================================$C
 
   $(printf "$SOURCE ${txt_repo::4}:" | xargs) $w_l$(basename ${repodir}) $($(REPOURLDIRTY) &&       printf"$r_l($txt_wc_deviation)")\n$W"
};
 
      
